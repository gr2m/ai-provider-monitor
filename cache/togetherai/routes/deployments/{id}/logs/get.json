{
  "description": "Retrieve logs from a deployment, optionally filtered by replica ID. Use follow=true to stream logs in real-time.",
  "parameters": [
    {
      "description": "Deployment ID or name",
      "in": "path",
      "name": "id",
      "required": true,
      "schema": {
        "type": "string"
      }
    },
    {
      "description": "Replica ID to filter logs",
      "in": "query",
      "name": "replica_id",
      "schema": {
        "type": "string"
      }
    },
    {
      "description": "Stream logs in real-time (ndjson format)",
      "in": "query",
      "name": "follow",
      "schema": {
        "type": "boolean"
      }
    }
  ],
  "responses": {
    "200": {
      "content": {
        "application/json": {
          "schema": {
            "properties": {
              "lines": {
                "items": {
                  "type": "string"
                },
                "type": "array"
              }
            },
            "type": "object"
          }
        }
      },
      "description": "Deployment logs"
    },
    "404": {
      "content": {
        "application/json": {
          "schema": {
            "type": "object"
          }
        }
      },
      "description": "Deployment not found"
    },
    "500": {
      "content": {
        "application/json": {
          "schema": {
            "type": "object"
          }
        }
      },
      "description": "Internal server error"
    }
  },
  "summary": "Get logs for a deployment",
  "tags": [
    "Deployments"
  ]
}
