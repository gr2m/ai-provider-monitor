{
  "description": "Fetch video metadata",
  "operationId": "retrieveVideo",
  "parameters": [
    {
      "description": "Identifier of video from create response.",
      "in": "query",
      "name": "id",
      "required": true,
      "schema": {
        "type": "string"
      }
    }
  ],
  "responses": {
    "200": {
      "content": {
        "application/json": {
          "schema": {
            "description": "Structured information describing a generated video job.",
            "properties": {
              "created_at": {
                "description": "Unix timestamp (seconds) for when the job was created.",
                "type": "string"
              },
              "done_at": {
                "description": "Unix timestamp (seconds) for when the job completed, if finished.",
                "type": "string"
              },
              "id": {
                "description": "Unique identifier for the video job.",
                "type": "string"
              },
              "info": {
                "description": "Metadata about the video resource",
                "properties": {
                  "errors": {
                    "description": "Errors that caused the creation to fail.",
                    "items": {
                      "properties": {
                        "code": {
                          "type": "string"
                        },
                        "message": {
                          "type": "string"
                        }
                      },
                      "required": [
                        "code",
                        "message"
                      ],
                      "type": "object"
                    },
                    "type": "array"
                  },
                  "user_id": {
                    "description": "ID of user who created the video",
                    "type": "string"
                  }
                },
                "required": [
                  "user_id"
                ]
              },
              "inputs": {
                "description": "The parameters used for the creation of this video.",
                "type": "object"
              },
              "model": {
                "description": "The video generation model that produced the job.",
                "type": "string"
              },
              "outputs": {
                "properties": {
                  "cost": {
                    "description": "The cost of generated video charged to the owners account.",
                    "type": "integer"
                  },
                  "video_url": {
                    "description": "URL hosting the generated video",
                    "type": "string"
                  }
                },
                "required": [
                  "cost",
                  "video_url"
                ],
                "type": "object"
              },
              "status": {
                "description": "Current lifecycle status of the video job.",
                "enum": [
                  "in_progress",
                  "completed",
                  "failed"
                ],
                "type": "string"
              }
            },
            "required": [
              "id",
              "model",
              "status",
              "info",
              "inputs",
              "created_at",
              "done_at"
            ],
            "title": "Video job",
            "type": "object"
          }
        }
      },
      "description": "Success"
    },
    "400": {
      "description": "Invalid request parameters."
    },
    "404": {
      "description": "Video ID not found."
    }
  },
  "servers": [
    {
      "url": "https://api.together.xyz/v2"
    }
  ],
  "summary": "Fetch video metadata",
  "tags": [
    "Video"
  ]
}
