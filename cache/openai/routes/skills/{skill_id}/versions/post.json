{
  "operationId": "CreateSkillVersion",
  "parameters": [
    {
      "description": "The identifier of the skill to version.",
      "in": "path",
      "name": "skill_id",
      "required": true,
      "schema": {
        "example": "skill_123",
        "type": "string"
      }
    }
  ],
  "requestBody": {
    "content": {
      "application/json": {
        "schema": {
          "$ref": "#/components/schemas/CreateSkillVersionBody"
        }
      },
      "multipart/form-data": {
        "schema": {
          "$ref": "#/components/schemas/CreateSkillVersionBody"
        }
      }
    }
  },
  "responses": {
    "200": {
      "content": {
        "application/json": {
          "schema": {
            "$ref": "#/components/schemas/SkillVersionResource"
          }
        }
      },
      "description": "Success"
    }
  },
  "summary": "Create a new immutable skill version.",
  "tags": [
    "Skills"
  ],
  "components": {
    "schemas": {
      "CreateSkillVersionBody": {
        "description": "Uploads a new immutable version of a skill.",
        "properties": {
          "default": {
            "description": "Whether to set this version as the default.",
            "type": "boolean"
          },
          "files": {
            "oneOf": [
              {
                "description": "Skill files to upload (directory upload) or a single zip file.",
                "items": {
                  "format": "binary",
                  "type": "string"
                },
                "maxItems": 500,
                "type": "array"
              },
              {
                "description": "Skill zip file to upload.",
                "format": "binary",
                "type": "string"
              }
            ]
          }
        },
        "required": [
          "files"
        ],
        "title": "Create skill version request",
        "type": "object"
      },
      "SkillVersionResource": {
        "properties": {
          "created_at": {
            "description": "Unix timestamp (seconds) for when the version was created.",
            "type": "integer"
          },
          "description": {
            "description": "Description of the skill version.",
            "type": "string"
          },
          "id": {
            "description": "Unique identifier for the skill version.",
            "type": "string"
          },
          "name": {
            "description": "Name of the skill version.",
            "type": "string"
          },
          "object": {
            "default": "skill.version",
            "description": "The object type, which is `skill.version`.",
            "enum": [
              "skill.version"
            ],
            "type": "string"
          },
          "skill_id": {
            "description": "Identifier of the skill for this version.",
            "type": "string"
          },
          "version": {
            "description": "Version number for this skill.",
            "type": "string"
          }
        },
        "required": [
          "object",
          "id",
          "skill_id",
          "version",
          "created_at",
          "name",
          "description"
        ],
        "type": "object"
      }
    }
  }
}
