{
  "operationId": "list-project-user-role-assignments",
  "parameters": [
    {
      "description": "The ID of the project to inspect.",
      "in": "path",
      "name": "project_id",
      "required": true,
      "schema": {
        "type": "string"
      }
    },
    {
      "description": "The ID of the user to inspect.",
      "in": "path",
      "name": "user_id",
      "required": true,
      "schema": {
        "type": "string"
      }
    },
    {
      "description": "A limit on the number of project role assignments to return.",
      "in": "query",
      "name": "limit",
      "required": false,
      "schema": {
        "maximum": 1000,
        "minimum": 0,
        "type": "integer"
      }
    },
    {
      "description": "Cursor for pagination. Provide the value from the previous response's `next` field to continue listing project roles.",
      "in": "query",
      "name": "after",
      "required": false,
      "schema": {
        "type": "string"
      }
    },
    {
      "description": "Sort order for the returned project roles.",
      "in": "query",
      "name": "order",
      "required": false,
      "schema": {
        "enum": [
          "asc",
          "desc"
        ],
        "type": "string"
      }
    }
  ],
  "responses": {
    "200": {
      "content": {
        "application/json": {
          "schema": {
            "$ref": "#/components/schemas/RoleListResource"
          }
        }
      },
      "description": "Project user role assignments listed successfully."
    }
  },
  "summary": "Lists the project roles assigned to a user within a project.",
  "tags": [
    "Project user role assignments"
  ],
  "components": {
    "schemas": {
      "RoleListResource": {
        "description": "Paginated list of roles assigned to a principal.",
        "properties": {
          "data": {
            "description": "Role assignments returned in the current page.",
            "items": {
              "$ref": "#/components/schemas/AssignedRoleDetails"
            },
            "type": "array"
          },
          "has_more": {
            "description": "Whether additional assignments are available when paginating.",
            "type": "boolean"
          },
          "next": {
            "anyOf": [
              {
                "type": "string"
              },
              {
                "type": "null"
              }
            ],
            "description": "Cursor to fetch the next page of results, or `null` when there are no more assignments."
          },
          "object": {
            "description": "Always `list`.",
            "enum": [
              "list"
            ],
            "type": "string"
          }
        },
        "required": [
          "object",
          "data",
          "has_more",
          "next"
        ],
        "type": "object"
      },
      "AssignedRoleDetails": {
        "description": "Detailed information about a role assignment entry returned when listing assignments.",
        "properties": {
          "created_at": {
            "anyOf": [
              {
                "format": "int64",
                "type": "integer"
              },
              {
                "type": "null"
              }
            ],
            "description": "When the role was created."
          },
          "created_by": {
            "anyOf": [
              {
                "type": "string"
              },
              {
                "type": "null"
              }
            ],
            "description": "Identifier of the actor who created the role."
          },
          "created_by_user_obj": {
            "anyOf": [
              {
                "additionalProperties": true,
                "type": "object"
              },
              {
                "type": "null"
              }
            ],
            "description": "User details for the actor that created the role, when available."
          },
          "description": {
            "anyOf": [
              {
                "type": "string"
              },
              {
                "type": "null"
              }
            ],
            "description": "Description of the role."
          },
          "id": {
            "description": "Identifier for the role.",
            "type": "string"
          },
          "metadata": {
            "anyOf": [
              {
                "additionalProperties": true,
                "type": "object"
              },
              {
                "type": "null"
              }
            ],
            "description": "Arbitrary metadata stored on the role."
          },
          "name": {
            "description": "Name of the role.",
            "type": "string"
          },
          "permissions": {
            "description": "Permissions associated with the role.",
            "items": {
              "type": "string"
            },
            "type": "array"
          },
          "predefined_role": {
            "description": "Whether the role is predefined by OpenAI.",
            "type": "boolean"
          },
          "resource_type": {
            "description": "Resource type the role applies to.",
            "type": "string"
          },
          "updated_at": {
            "anyOf": [
              {
                "format": "int64",
                "type": "integer"
              },
              {
                "type": "null"
              }
            ],
            "description": "When the role was last updated."
          }
        },
        "required": [
          "id",
          "name",
          "permissions",
          "resource_type",
          "predefined_role",
          "description",
          "created_at",
          "updated_at",
          "created_by",
          "created_by_user_obj",
          "metadata"
        ],
        "type": "object"
      }
    }
  }
}
