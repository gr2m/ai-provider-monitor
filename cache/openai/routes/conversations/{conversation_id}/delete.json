{
  "description": "Delete a conversation with the given ID.",
  "operationId": "deleteConversation",
  "parameters": [
    {
      "description": "The ID of the conversation to delete.",
      "in": "path",
      "name": "conversation_id",
      "required": true,
      "schema": {
        "example": "conv_123",
        "type": "string"
      }
    }
  ],
  "responses": {
    "200": {
      "content": {
        "application/json": {
          "schema": {
            "properties": {
              "deleted": {
                "type": "boolean"
              },
              "id": {
                "type": "string"
              },
              "object": {
                "default": "conversation.deleted",
                "enum": [
                  "conversation.deleted"
                ],
                "type": "string"
              }
            },
            "required": [
              "object",
              "deleted",
              "id"
            ],
            "type": "object"
          }
        }
      },
      "description": "OK"
    }
  },
  "summary": "Delete a conversation",
  "tags": [
    "Conversations"
  ]
}
