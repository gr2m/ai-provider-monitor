{
  "operationId": "list-roles",
  "parameters": [
    {
      "description": "A limit on the number of roles to return. Defaults to 1000.",
      "in": "query",
      "name": "limit",
      "required": false,
      "schema": {
        "default": 1000,
        "maximum": 1000,
        "minimum": 0,
        "type": "integer"
      }
    },
    {
      "description": "Cursor for pagination. Provide the value from the previous response's `next` field to continue listing roles.",
      "in": "query",
      "name": "after",
      "required": false,
      "schema": {
        "type": "string"
      }
    },
    {
      "description": "Sort order for the returned roles.",
      "in": "query",
      "name": "order",
      "required": false,
      "schema": {
        "default": "asc",
        "enum": [
          "asc",
          "desc"
        ],
        "type": "string"
      }
    }
  ],
  "responses": {
    "200": {
      "content": {
        "application/json": {
          "schema": {
            "$ref": "#/components/schemas/PublicRoleListResource"
          }
        }
      },
      "description": "Roles listed successfully."
    }
  },
  "summary": "Lists the roles configured for the organization.",
  "tags": [
    "Roles"
  ],
  "components": {
    "schemas": {
      "PublicRoleListResource": {
        "description": "Paginated list of roles available on an organization or project.",
        "properties": {
          "data": {
            "description": "Roles returned in the current page.",
            "items": {
              "$ref": "#/components/schemas/Role"
            },
            "type": "array"
          },
          "has_more": {
            "description": "Whether more roles are available when paginating.",
            "type": "boolean"
          },
          "next": {
            "anyOf": [
              {
                "type": "string"
              },
              {
                "type": "null"
              }
            ],
            "description": "Cursor to fetch the next page of results, or `null` when there are no additional roles."
          },
          "object": {
            "description": "Always `list`.",
            "enum": [
              "list"
            ],
            "type": "string"
          }
        },
        "required": [
          "object",
          "data",
          "has_more",
          "next"
        ],
        "type": "object"
      },
      "Role": {
        "description": "Details about a role that can be assigned through the public Roles API.",
        "properties": {
          "description": {
            "anyOf": [
              {
                "type": "string"
              },
              {
                "type": "null"
              }
            ],
            "description": "Optional description of the role."
          },
          "id": {
            "description": "Identifier for the role.",
            "type": "string"
          },
          "name": {
            "description": "Unique name for the role.",
            "type": "string"
          },
          "object": {
            "description": "Always `role`.",
            "enum": [
              "role"
            ],
            "type": "string"
          },
          "permissions": {
            "description": "Permissions granted by the role.",
            "items": {
              "type": "string"
            },
            "type": "array"
          },
          "predefined_role": {
            "description": "Whether the role is predefined and managed by OpenAI.",
            "type": "boolean"
          },
          "resource_type": {
            "description": "Resource type the role is bound to (for example `api.organization` or `api.project`).",
            "type": "string"
          }
        },
        "required": [
          "object",
          "id",
          "name",
          "description",
          "permissions",
          "resource_type",
          "predefined_role"
        ],
        "type": "object"
      }
    }
  }
}
