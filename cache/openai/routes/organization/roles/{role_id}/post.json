{
  "description": "Updates an existing organization role.",
  "operationId": "update-role",
  "parameters": [
    {
      "description": "The ID of the role to update.",
      "in": "path",
      "name": "role_id",
      "required": true,
      "schema": {
        "type": "string"
      }
    }
  ],
  "requestBody": {
    "content": {
      "application/json": {
        "schema": {
          "description": "Request payload for updating an existing role.",
          "properties": {
            "description": {
              "anyOf": [
                {
                  "type": "string"
                },
                {
                  "type": "null"
                }
              ],
              "description": "New description for the role."
            },
            "permissions": {
              "anyOf": [
                {
                  "items": {
                    "type": "string"
                  },
                  "type": "array"
                },
                {
                  "type": "null"
                }
              ],
              "description": "Updated set of permissions for the role."
            },
            "role_name": {
              "anyOf": [
                {
                  "type": "string"
                },
                {
                  "type": "null"
                }
              ],
              "description": "New name for the role."
            }
          },
          "type": "object"
        }
      }
    },
    "description": "Fields to update on the role.",
    "required": true
  },
  "responses": {
    "200": {
      "content": {
        "application/json": {
          "schema": {
            "description": "Details about a role that can be assigned through the public Roles API.",
            "properties": {
              "description": {
                "anyOf": [
                  {
                    "type": "string"
                  },
                  {
                    "type": "null"
                  }
                ],
                "description": "Optional description of the role."
              },
              "id": {
                "description": "Identifier for the role.",
                "type": "string"
              },
              "name": {
                "description": "Unique name for the role.",
                "type": "string"
              },
              "object": {
                "description": "Always `role`.",
                "enum": [
                  "role"
                ],
                "type": "string"
              },
              "permissions": {
                "description": "Permissions granted by the role.",
                "items": {
                  "type": "string"
                },
                "type": "array"
              },
              "predefined_role": {
                "description": "Whether the role is predefined and managed by OpenAI.",
                "type": "boolean"
              },
              "resource_type": {
                "description": "Resource type the role is bound to (for example `api.organization` or `api.project`).",
                "type": "string"
              }
            },
            "required": [
              "object",
              "id",
              "name",
              "description",
              "permissions",
              "resource_type",
              "predefined_role"
            ],
            "type": "object"
          }
        }
      },
      "description": "Role updated successfully."
    }
  },
  "summary": "Update organization role",
  "tags": [
    "Roles"
  ]
}
