{
  "description": "Retrieves a user by their identifier.",
  "operationId": "retrieve-user",
  "parameters": [
    {
      "description": "The ID of the user.",
      "in": "path",
      "name": "user_id",
      "required": true,
      "schema": {
        "type": "string"
      }
    }
  ],
  "responses": {
    "200": {
      "content": {
        "application/json": {
          "schema": {
            "description": "Represents an individual `user` within an organization.",
            "properties": {
              "added_at": {
                "description": "The Unix timestamp (in seconds) of when the user was added.",
                "type": "integer"
              },
              "email": {
                "description": "The email address of the user",
                "type": "string"
              },
              "id": {
                "description": "The identifier, which can be referenced in API endpoints",
                "type": "string"
              },
              "name": {
                "description": "The name of the user",
                "type": "string"
              },
              "object": {
                "description": "The object type, which is always `organization.user`",
                "enum": [
                  "organization.user"
                ],
                "type": "string"
              },
              "role": {
                "description": "`owner` or `reader`",
                "enum": [
                  "owner",
                  "reader"
                ],
                "type": "string"
              }
            },
            "required": [
              "object",
              "id",
              "name",
              "email",
              "role",
              "added_at"
            ],
            "type": "object"
          }
        }
      },
      "description": "User retrieved successfully."
    }
  },
  "summary": "Retrieve user",
  "tags": [
    "Users"
  ]
}
