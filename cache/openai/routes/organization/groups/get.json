{
  "operationId": "list-groups",
  "parameters": [
    {
      "description": "A limit on the number of groups to be returned. Limit can range between 0 and 1000, and the default is 100.\n",
      "in": "query",
      "name": "limit",
      "required": false,
      "schema": {
        "default": 100,
        "maximum": 1000,
        "minimum": 0,
        "type": "integer"
      }
    },
    {
      "description": "A cursor for use in pagination. `after` is a group ID that defines your place in the list. For instance, if you make a list request and receive 100 objects, ending with group_abc, your subsequent call can include `after=group_abc` in order to fetch the next page of the list.\n",
      "in": "query",
      "name": "after",
      "required": false,
      "schema": {
        "type": "string"
      }
    },
    {
      "description": "Specifies the sort order of the returned groups.",
      "in": "query",
      "name": "order",
      "required": false,
      "schema": {
        "default": "asc",
        "enum": [
          "asc",
          "desc"
        ],
        "type": "string"
      }
    }
  ],
  "responses": {
    "200": {
      "content": {
        "application/json": {
          "schema": {
            "$ref": "#/components/schemas/GroupListResource"
          }
        }
      },
      "description": "Groups listed successfully."
    }
  },
  "summary": "Lists all groups in the organization.",
  "tags": [
    "Groups"
  ],
  "components": {
    "schemas": {
      "GroupListResource": {
        "description": "Paginated list of organization groups.",
        "properties": {
          "data": {
            "description": "Groups returned in the current page.",
            "items": {
              "$ref": "#/components/schemas/GroupResponse"
            },
            "type": "array"
          },
          "has_more": {
            "description": "Whether additional groups are available when paginating.",
            "type": "boolean"
          },
          "next": {
            "anyOf": [
              {
                "type": "string"
              },
              {
                "type": "null"
              }
            ],
            "description": "Cursor to fetch the next page of results, or `null` if there are no more results."
          },
          "object": {
            "description": "Always `list`.",
            "enum": [
              "list"
            ],
            "type": "string"
          }
        },
        "required": [
          "object",
          "data",
          "has_more",
          "next"
        ],
        "type": "object"
      },
      "GroupResponse": {
        "description": "Details about an organization group.",
        "properties": {
          "created_at": {
            "description": "Unix timestamp (in seconds) when the group was created.",
            "format": "int64",
            "type": "integer"
          },
          "id": {
            "description": "Identifier for the group.",
            "type": "string"
          },
          "is_scim_managed": {
            "description": "Whether the group is managed through SCIM and controlled by your identity provider.",
            "type": "boolean"
          },
          "name": {
            "description": "Display name of the group.",
            "type": "string"
          }
        },
        "required": [
          "id",
          "name",
          "created_at",
          "is_scim_managed"
        ],
        "type": "object"
      }
    }
  }
}
