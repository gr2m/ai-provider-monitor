{
  "description": "Lists files and folders in the root of your project storage.",
  "operationId": "serverlessListRoot",
  "responses": {
    "200": {
      "content": {
        "application/json": {
          "example": [
            {
              "created_time": "2024-11-08T00:00:00.000Z",
              "is_file": false,
              "name": "datasets",
              "path": "datasets",
              "size": 0,
              "updated_time": "2024-11-09T00:00:00.000Z"
            }
          ],
          "schema": {
            "description": "Array of files and folders for the requested directory",
            "items": {
              "additionalProperties": false,
              "description": "File or folder specification",
              "properties": {
                "checksum_md5": {
                  "description": "Optional MD5 checksum",
                  "example": "9e107d9d372bb6826bd81d3542a419d6",
                  "type": "string"
                },
                "checksum_sha256": {
                  "description": "Optional SHA256 checksum",
                  "example": "b1946ac92492d2347c6235b4d2611184d5c3f1f0f44aa7b27d3b1d5b0f5a6a11",
                  "type": "string"
                },
                "created_time": {
                  "description": "Creation timestamp (UTC ISO 8601)",
                  "example": "2024-11-08T00:00:00.000Z",
                  "format": "date-time",
                  "type": "string"
                },
                "is_file": {
                  "description": "True if this item is a file, false if it is a folder",
                  "example": true,
                  "type": "boolean"
                },
                "name": {
                  "description": "Base name of the file or folder",
                  "example": "cat.jpg",
                  "type": "string"
                },
                "path": {
                  "description": "Full file or folder path",
                  "example": "datasets/images/cat.jpg",
                  "type": "string"
                },
                "size": {
                  "description": "File size in bytes (0 for folders)",
                  "example": 1250023,
                  "type": "number"
                },
                "updated_time": {
                  "description": "Last update timestamp (UTC ISO 8601)",
                  "example": "2024-11-09T00:00:00.000Z",
                  "format": "date-time",
                  "type": "string"
                }
              },
              "required": [
                "path",
                "name",
                "created_time",
                "updated_time",
                "is_file",
                "size"
              ],
              "type": "object"
            },
            "type": "array"
          }
        }
      },
      "description": "Successfully listed files"
    },
    "401": {
      "content": {
        "application/json": {
          "example": {
            "error": {
              "message": "Authentication required",
              "type": "authorization_error"
            }
          },
          "schema": {
            "description": "Standard error response format",
            "properties": {
              "error": {
                "description": "Error details",
                "properties": {
                  "docs_url": {
                    "description": "Link to relevant documentation",
                    "format": "uri",
                    "type": "string"
                  },
                  "message": {
                    "description": "Human-readable error message",
                    "type": "string"
                  },
                  "request_id": {
                    "description": "Unique request identifier for debugging",
                    "type": "string"
                  },
                  "type": {
                    "description": "The category of error that occurred",
                    "enum": [
                      "authorization_error",
                      "validation_error",
                      "not_found",
                      "rate_limited",
                      "server_error",
                      "not_implemented"
                    ],
                    "type": "string"
                  }
                },
                "required": [
                  "type",
                  "message"
                ],
                "type": "object"
              }
            },
            "required": [
              "error"
            ],
            "type": "object"
          }
        }
      },
      "description": "Authentication required"
    },
    "429": {
      "content": {
        "application/json": {
          "example": {
            "error": {
              "message": "Rate limit exceeded",
              "type": "rate_limited"
            }
          },
          "schema": {
            "description": "Standard error response format",
            "properties": {
              "error": {
                "description": "Error details",
                "properties": {
                  "docs_url": {
                    "description": "Link to relevant documentation",
                    "format": "uri",
                    "type": "string"
                  },
                  "message": {
                    "description": "Human-readable error message",
                    "type": "string"
                  },
                  "request_id": {
                    "description": "Unique request identifier for debugging",
                    "type": "string"
                  },
                  "type": {
                    "description": "The category of error that occurred",
                    "enum": [
                      "authorization_error",
                      "validation_error",
                      "not_found",
                      "rate_limited",
                      "server_error",
                      "not_implemented"
                    ],
                    "type": "string"
                  }
                },
                "required": [
                  "type",
                  "message"
                ],
                "type": "object"
              }
            },
            "required": [
              "error"
            ],
            "type": "object"
          }
        }
      },
      "description": "Rate limit exceeded"
    },
    "500": {
      "content": {
        "application/json": {
          "example": {
            "error": {
              "message": "An unexpected error occurred",
              "type": "server_error"
            }
          },
          "schema": {
            "description": "Standard error response format",
            "properties": {
              "error": {
                "description": "Error details",
                "properties": {
                  "docs_url": {
                    "description": "Link to relevant documentation",
                    "format": "uri",
                    "type": "string"
                  },
                  "message": {
                    "description": "Human-readable error message",
                    "type": "string"
                  },
                  "request_id": {
                    "description": "Unique request identifier for debugging",
                    "type": "string"
                  },
                  "type": {
                    "description": "The category of error that occurred",
                    "enum": [
                      "authorization_error",
                      "validation_error",
                      "not_found",
                      "rate_limited",
                      "server_error",
                      "not_implemented"
                    ],
                    "type": "string"
                  }
                },
                "required": [
                  "type",
                  "message"
                ],
                "type": "object"
              }
            },
            "required": [
              "error"
            ],
            "type": "object"
          }
        }
      },
      "description": "Internal server error"
    }
  },
  "security": [
    {
      "apiKey": []
    }
  ],
  "summary": "List files (root)",
  "tags": [
    "Serverless",
    "Files"
  ]
}
