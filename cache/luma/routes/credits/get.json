        "application/json": {
          "schema": {
            "$ref": "#/components/schemas/Credits"
          }
        }
      },
      "description": "Credits found"
    },
    "default": {
      "content": {
        "application/json": {
          "schema": {
            "$ref": "#/components/schemas/Error"
          }
        }
      },
      "description": "Error"
    }
  },
  "summary": "Get credits",
  "tags": [
    "Credits"
  ],
